{
  "name": "onsenui-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "scripts": {
    "postinstall": "cd vue-onsenui && npm install",
    "build": "npm run --prefix onsenui build",
    "build:previewer": "npm run --prefix css-components-previewer build",
    "build:react": "npm run --prefix react-onsenui build",
    "build:vue": "cd vue-onsenui && npm run build",
    "build:vue3": "npm run --prefix vue3-onsenui build",
    "serve": "npm run --prefix onsenui serve",
    "serve:previewer": "npm run --prefix css-components-previewer serve",
    "serve:react": "npm run --prefix react-onsenui-examples start",
    "serve:vue": "npm run --prefix vue-onsenui-examples serve",
    "serve:vue3": "npm run --prefix vue3-onsenui-examples dev",
    "test": "npm run --prefix onsenui test",
    "test:react": "npm run --prefix react-onsenui test",
    "watch:previewer": "npm run --prefix css-components-previewer watch",
    "watch:react": "npm run --prefix react-onsenui watch",
    "watch:vue": "cd vue-onsenui && npm run watch",
    "watch:vue3": "npm run --prefix vue3-onsenui watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "workspaces": [
    "./onsenui",
    "./react-onsenui",
    "./react-onsenui-examples",
    "./vue3-onsenui",
    "./vue3-onsenui-examples",
    "./vue-onsenui-examples",
    "./css-components-previewer"
  ]
}
